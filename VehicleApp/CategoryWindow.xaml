<Window x:Class="VehicleApp.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Okno Kategorii" Height="450" Width="800">
    <Grid>
        <TextBlock Name="CategoryDescription" Margin="10" TextWrapping="Wrap"/>
        <ListBox Name="SubCategoryListBox" DisplayMemberPath="Name" Margin="10,40,10,10" SelectionChanged="SubCategoryListBox_SelectionChanged"/>
    </Grid>
</Window>
